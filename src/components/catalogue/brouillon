                <Table>
                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Year</th>
                        <th>Rated</th>
                        <th>Released</th>
                        <th>Runtime</th>
                        <th>Genre</th>
                        <th>Director</th>
                        <th>Writer</th>
                        <th>Actors</th>
                        <th>Plot</th>
                        <th>Language</th>
                        <th>Country</th>
                        <th>Awards</th>
                        <th>Poster</th>
                        <th>Metascore</th>
                        <th>imdbRating</th>
                        <th>imdbVotes</th>
                        <th>imdbID</th>
                        <th>Type</th>
                        <th>DVD</th>
                        <th>BoxOffice</th>
                        <th>Production</th>
                        <th>Website</th>
                    </tr>
                    </thead>
                    <tbody>
                    {this.state == null || this.state.media == null || this.state.media.length <= 0 ? (
                        <tr>
                            <td align="center">
                                <b>Ops, no one here yet</b>
                            </td>
                        </tr>
                    ) : (
                        this.state.media.map(media => (
                            <tr key={media.Title}>
                                <td>{media.Title}</td>
                                <td>{media.Year}</td>
                                <td>{media.Rated}</td>
                                <td>{media.Released}</td>
                                <td>{media.Runtime}</td>
                                <td>{media.Genre}</td>
                                <td>{media.Director}</td>
                                <td className="media-col-50">{media.Writer}</td>
                                <td>{media.Actors}</td>
                                <td>{media.Plot}</td>
                                <td>{media.Language}</td>
                                <td>{media.Country}</td>
                                <td>{media.Awards}</td>
                                <td><img className="media-img" src={media.Poster} alt="media"/></td>
                                <td>{media.Metascore}</td>
                                <td>{media.imdbRating}</td>
                                <td>{media.imdbVotes}</td>
                                <td>{media.imdbID}</td>
                                <td>{media.Type}</td>
                                <td>{media.DVD}</td>
                                <td>{media.BoxOffice}</td>
                                <td>{media.Production}</td>
                                <td>{media.Website}</td>
                            </tr>
                        ))
                    )}
                    </tbody>
                </Table>